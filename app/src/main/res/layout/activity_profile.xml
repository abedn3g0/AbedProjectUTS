<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">


    <ImageView
        android:id="@+id/imgPanah"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_gravity="start"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/ip_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:text="profile"
        android:textColor="@color/hitam"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/profile_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/icouser" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="ABED NEGO NAUW"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center_horizontal"
        android:text="nauwabet@gmail.com"
        android:textStyle="italic"/>

<!--    membuat icon notifikasi-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:gravity="center"
            app:srcCompat="@drawable/iconnotivicate" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="198dp"
            android:layout_height="26dp"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:text="notifikasi"
            android:textSize="18dp" />


    </LinearLayout>

    <!--    membuat icon seting-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:gravity="center"
            app:srcCompat="@drawable/iconsetiing" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Seting"
            android:layout_marginTop="14dp"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:gravity="center"
            app:srcCompat="@drawable/iconcomment" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pesan"
            android:layout_marginTop="10dp"
            android:textSize="18dp" />


    </LinearLayout>


</LinearLayout>